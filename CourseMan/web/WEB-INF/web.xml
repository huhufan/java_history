<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/WEB-INF/views/index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
         <jsp-property-group>
             <url-pattern>*.jsp</url-pattern>
             <include-prelude>/WEB-INF/views/common.jsp</include-prelude>
         </jsp-property-group>
    </jsp-config>
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>com.demo.filter.Filter</filter-class>
        <init-param>
            <param-name>unicode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.demo.servlet.LoginServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>com.demo.servlet.Dispatcher</servlet-class>
    </servlet>    
      <servlet-mapping>
          <servlet-name>dispatcher</servlet-name>
          <url-pattern>/top</url-pattern>
      </servlet-mapping>
      <servlet-mapping>
          <servlet-name>dispatcher</servlet-name>
          <url-pattern>/left</url-pattern>
      </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/selectUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/server</url-pattern>
    </servlet-mapping>

<servlet>
    <servlet-name>AddUserServlet</servlet-name>
    <servlet-class>com.demo.servlet.AddUserServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/AddUserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.demo.servlet.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/addCourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/courseImport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/ExportCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/GetCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/AddCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/SearchCourse</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>CourseImportServlet</servlet-name>
        <servlet-class>com.demo.servlet.CourseImportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseImportServlet</servlet-name>
        <url-pattern>/CourseImportServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ExportCourse</servlet-name>
        <servlet-class>com.demo.servlet.ExportCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExportCourse</servlet-name>
        <url-pattern>/ExportCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>com.demo.servlet.PageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/FirstPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/FrontPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/NextPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/FinPage</url-pattern>
    </servlet-mapping>
</web-app>